<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_ski"
    android:background="@drawable/bg_color">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="13dp"
            android:orientation="vertical"
            android:padding="7dp"
            android:background="@drawable/fragments_bg">


            <ImageView
                android:id="@+id/img_ski"
                android:layout_width="262dp"
                android:layout_height="125dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="65dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="59dp"
                android:layout_marginRight="59dp"
                app:srcCompat="@drawable/ski" />

            <EditText
                android:id="@+id/etRollSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/edittext_two"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:hint="Roll number:"
                android:layout_marginTop="20dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="Skills and hobbies:"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittext_two"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:inputType="textMultiLine"
                android:lines="8" />

            <Button
                android:id="@+id/btSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Data"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_two"
                android:textColor="#49A70E"
                android:fontFamily="@font/freckle_face"
                android:textAllCaps="false"
                android:textSize="28dp"/>

            <Button
                android:id="@+id/btUpateskills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update the Data"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_two"
                android:textColor="#49A70E"
                android:fontFamily="@font/freckle_face"
                android:textAllCaps="false"
                android:textSize="28dp"/>

        </LinearLayout>
</ScrollView>